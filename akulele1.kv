#:kivy 2.0.0

<PongGame>:

    canvas.before:
        Color:
            rgba: 0.3,0.3,0.3,0.85
        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        size: root.width * 0.5,root.height*0.3
        text: app.message
        center_x: root.width / 2
        center_y: 0.7*root.height
        font_size: 0.5*self.height
        color: 1,1,1,1
        background_color: app.colors
        on_press: app.level_ping()

    Button:
        size: root.width * 0.5,root.height*0.3
        text: app.message1
        center_x: root.width / 2
        center_y:0+ 0.3*root.height
        font_size: 1/2*self.height
        color: app.colors1
        background_color:0,0.5,1,1
        on_press: app.on_press_button()

